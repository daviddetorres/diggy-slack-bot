[
  {
    "type": "section",
    "text": {
      "type": "mrkdwn",
      "text": "So, you are here looking for adventure... .\n\n *Here are the projects that need your help:*"
    }
  }
  {% for project in projects %}
  ,{
    "type": "divider"
  },{
    "type": "section",
    "text": {
      "type": "mrkdwn",
      "text": "*{{ project['name'] }}:* {{ project['subtitle'] | replace('\n', '\\n') | replace('\\\"', '') }}\n\n"
    },
    "accessory": {
      "type": "image",
      "image_url": "https://{{ host }}:8443/img/700x700/{{  project['image'] }}",
      "alt_text": "alt text for image"
    }
  }
  {% for need in needs %}
{% if need['project_id'] == project['id'] %}
,{
	"type": "section",
	"text": {
		"type": "mrkdwn",
		"text": "üë®üèΩ‚Äçüíª *{{ need['need'] }}:* {{ need['need_description'] }}\n\n"
	}
}
{% endif %}
{% endfor %}
  ,
  {
    "type": "section",
    "text": {
      "type": "mrkdwn",
      "text": "\nVisit the project page!"
    },
    "accessory": {
      "type": "button",
      "text": {
        "type": "plain_text",
        "text": "Project Page",
        "emoji": true
      },
      "value": "click_me_123",
      "url": "https://{{ host }}:8443/project/{{ project['id'] }}",
      "action_id": "button-action"
    }
  }
  {% endfor %}
  ,
  {
    "type": "divider"
  }
]
